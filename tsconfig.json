{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2020", "esnext", "DOM"],
    "declaration": true,
    "target": "ESNext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "allowUnreachableCode": true,
    "outDir": "dist",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts"]
  // "files": ["./hardhat.config.ts"]
}
